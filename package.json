{
  "name": "min-utils",
  "version": "0.1.0",
  "description": "Minimalistic utilities for modern ES with TypeScript",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/briteboard/node-min-utils.git"
  },
  "scripts": {
    "test": "TS_NODE_FILES=true ./node_modules/.bin/mocha -p ./test/tsconfig.json ./test/spec/*.spec.ts",
    "testw": "TS_NODE_FILES=true ./node_modules/.bin/mocha -p ./test/tsconfig.json ./test/spec/*.spec.ts --watch --watch-files './test/**/*.ts','./src/**/*.ts'",
    "prepare": "node_modules/.bin/rimraf ./dist && ./node_modules/.bin/tsc"
  },
  "author": "jeremy.chone@gmail.com",
  "license": "MIT",
  "peerDependencies": {},
  "devDependencies": {
    "@types/node": "^13.13.5",
    "@types/mocha": "^7.0.2",
    "mocha": "^7.1.2",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "dependencies": {},
  "files": [
    "src/",
    "dist/"
  ]
}
